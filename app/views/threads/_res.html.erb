
<%= form_for @re ,:url => {action: "res"}, data: { remote: true } do |f| %>
 <%= f.label :body, "コメント", class: 'text-white' %>
 <%= f.text_area :body, class: 'form-control'%>
 <%= f.hidden_field :thre_id, value: @thre.id %>
<%= f.submit "投稿",id: 'post', class: 'btn-block btn-white' %>
<% end %>

<% @thre.res.each do |t| %>
 <div class="well res">
   <%= t.body %>
   <br>
   <div class='text-right'><%= t.user.name %></div>
  </div>
<% end %>
