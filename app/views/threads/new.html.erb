<div class="container">
 <div class="row">
  <div class="col-md-offset-3 col-md-6">
   <h1 class="text-center text-white">スレッド新規投稿</h1>
   
   <%= link_to '一覧へ戻る', threads_path, class:'btn btn-danger' %>
   
      <%= form_for @thre, url: threads_path do |f| %>
       <div class="form-group">
        <%= f.label :title, 'スレッドのタイトル', class: "text-white" %>
        <%= f.text_field :title, class: "form-control" %>
        <%= f.hidden_field :user_id, value:current_user.id %>
       </div>
       
       <%= f.label :category, 'カテゴリ'%>
       <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |category| %>
        <%= category.label do %>
         <%= category.check_box %>
         <%= category.text %>
        <% end %>
       <% end %>
       
       
       <%= f.submit "投稿", class: "btn-block btn-white" %>
      <% end %>
   

   </div>
 </div>
</div>