
<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <h1 class="text-center text-white">スレッド一覧</h1>
        
        <%= link_to '一覧へ戻る', threads_path, class:'btn btn-danger' %>
        
            <div class="well">
            <h2><%= @thre.title %></h2>
            
              <% @thre.categories.each do |cat| %>
                <span class="badge"><%= cat.name %></span>
              <% end %>
            <br>
            <%= @thre.created_at %>
            </div>
            
            <div id="thre">
            <%= render partial: 'res', locals: {thre: @thre, re: @re} %>
            </div>
    </div>
  </div>
 </div>