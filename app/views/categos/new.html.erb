<div class="container">
 <div class="row">
  <div class="col-md-offset-3 col-md-6">
   <h1 class="text-center text-white">カテゴリ追加</h1>
   
   <%= link_to '一覧へ戻る', threads_path, class:'btn btn-danger' %>
   
      <%= form_for @category, url: categos_create_path do |f| %>
       <div class="form-group">
        <%= f.label :name, 'カテゴリ名', class: "text-white" %>
        <%= f.text_field :name, class: "form-control" %>
       </div>
       
       <%= f.submit "投稿", class: "btn-block btn-white" %>
      <% end %>
   

   </div>
 </div>
</div>